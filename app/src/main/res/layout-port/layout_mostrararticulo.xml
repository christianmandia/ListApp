<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bgFondo_MostrarArticulo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_MostrarArticulo">

    <TextView
        android:id="@+id/tvNombreArticuloMostrado_MostrarArticulo"
        android:layout_width="151sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:textSize="@dimen/text_size_all"
        app:layout_constraintStart_toStartOf="@+id/guideline15"
        app:layout_constraintTop_toBottomOf="@+id/tvArticulo_MostrarAticulo" />

    <TextView
        android:id="@+id/tvArticulo_MostrarAticulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/str_all_control_GestionArticulo_nomeArtículo"
        android:textSize="@dimen/text_size_all"
        app:layout_constraintStart_toStartOf="@+id/guideline15"
        app:layout_constraintTop_toTopOf="@+id/guideline16" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.052083332"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <ImageButton
        android:id="@+id/ibtn_VolverMostrarArticulo"
        android:layout_width="@dimen/ibtn_both_all"
        android:layout_height="@dimen/ibtn_both_all"
        android:layout_marginEnd="8sp"
        android:layout_marginStart="8sp"
        android:src="@android:drawable/ic_menu_revert"
        app:layout_constraintBottom_toTopOf="@+id/guideline24"
        app:layout_constraintEnd_toStartOf="@+id/guideline17"
        app:layout_constraintStart_toStartOf="@+id/guideline17"
        app:layout_constraintTop_toTopOf="@+id/guideline24" />

    <TextView
        android:id="@+id/tvCantidadArticulo_MostrarArticulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24sp"
        android:text="@string/str_all_control_GestionArticulo_cantidadArtículo"
        android:textSize="@dimen/text_size_all"
        app:layout_constraintStart_toEndOf="@+id/guideline15"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreArticuloMostrado_MostrarArticulo" />

    <TextView
        android:id="@+id/tvCantidadArticuloMostrado_MostrarArticulo"
        android:layout_width="91sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:textSize="@dimen/text_size_all"
        app:layout_constraintStart_toStartOf="@+id/guideline15"
        app:layout_constraintTop_toBottomOf="@+id/tvCantidadArticulo_MostrarArticulo" />

    <TextView
        android:id="@+id/tvPrecioArticulo_MostrarArticulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24sp"
        android:text="@string/str_all_control_GestionArticulo_precioArtículo"
        android:textSize="@dimen/text_size_all"
        app:layout_constraintStart_toStartOf="@+id/guideline17"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreArticuloMostrado_MostrarArticulo" />

    <TextView
        android:id="@+id/tvPrecioArticuloMostrado_MostrarArticulo"
        android:layout_width="129sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:textSize="@dimen/text_size_all"
        app:layout_constraintStart_toStartOf="@+id/guideline17"
        app:layout_constraintTop_toBottomOf="@+id/tvPrecioArticulo_MostrarArticulo" />

    <ImageView
        android:id="@+id/ivImagenArticulo_MostrarArticulo"
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:layout_marginTop="10dp"
        android:src="@android:drawable/ic_menu_report_image"
        app:layout_constraintBottom_toTopOf="@+id/ibtn_VolverMostrarArticulo"
        app:layout_constraintEnd_toStartOf="@+id/guideline17"
        app:layout_constraintStart_toStartOf="@+id/guideline17"
        app:layout_constraintTop_toBottomOf="@+id/tvNotasArticuloMostrado_MostrarArticulo" />

    <TextView
        android:id="@+id/tvNotasArticuloMostrado_MostrarArticulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:textSize="@dimen/text_size_all"
        app:layout_constraintEnd_toStartOf="@+id/guideline18"
        app:layout_constraintStart_toEndOf="@+id/guideline15"
        app:layout_constraintTop_toBottomOf="@+id/tvNotasArticulo_MostrarArticulo" />

    <TextView
        android:id="@+id/tvNotasArticulo_MostrarArticulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:text="@string/str_all_control_GestionArticulo_notasArtículo"
        android:textSize="@dimen/text_size_all"
        app:layout_constraintStart_toEndOf="@+id/guideline15"
        app:layout_constraintTop_toBottomOf="@+id/tvCantidadArticuloMostrado_MostrarArticulo" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.93" />
</android.support.constraint.ConstraintLayout>