    </style>
    <style name="style_lista0" parent="@android:style/TextAppearance">
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="style_menu" parent="@android:style/TextAppearance">
        <item name="android:itemBackground">@android:color/darker_gray</item>
